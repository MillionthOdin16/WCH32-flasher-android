<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Device Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDeviceStatus"
            style="@style/WCH32.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_chip"
                        android:contentDescription="@string/device_info" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/device_info"
                        style="@style/WCH32.Text.Headline" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDeviceStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status_ready"
                    android:textColor="?attr/colorOnSurface"
                    style="@style/WCH32.Text.Body" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- File Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFileSelection"
            style="@style/WCH32.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardDeviceStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_document"
                        android:contentDescription="@string/select_firmware" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/firmware_file"
                        style="@style/WCH32.Text.Headline" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvSelectedFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_file_selected"
                    android:layout_marginBottom="16dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    style="@style/WCH32.Text.Body" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectFile"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/select_firmware"
                    app:icon="@drawable/ic_file_upload"
                    app:iconGravity="textStart"
                    style="@style/WCH32.Button.Secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProgress"
            style="@style/WCH32.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorSecondaryContainer"
            app:layout_constraintTop_toBottomOf="@id/cardFileSelection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/operation_progress"
                    android:layout_marginBottom="12dp"
                    style="@style/WCH32.Text.Headline" />

                <TextView
                    android:id="@+id/tvProgressInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ready_to_flash"
                    android:layout_marginBottom="16dp"
                    style="@style/WCH32.Text.Body" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:indicatorColor="?attr/colorPrimary"
                    app:trackColor="?attr/colorSurfaceVariant"
                    app:trackCornerRadius="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFlash"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:text="@string/flash_firmware"
                android:enabled="false"
                app:icon="@drawable/ic_flash"
                app:iconGravity="textStart"
                style="@style/WCH32.Button.Primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnErase" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnErase"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:text="@string/erase_chip"
                android:enabled="false"
                app:icon="@drawable/ic_erase"
                app:iconGravity="textStart"
                style="@style/WCH32.Button.Secondary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnFlash"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Log Output -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLog"
            style="@style/WCH32.Card"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flash_log"
                    android:layout_marginBottom="8dp"
                    style="@style/WCH32.Text.Headline" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">

                    <TextView
                        android:id="@+id/tvLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="@string/app_ready"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textSize="11sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:padding="8dp"
                        android:background="?attr/colorSurfaceVariant"
                        android:textIsSelectable="true" />

                </ScrollView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>